<Window x:Class="JuegoGato_U3_Jessica_Alondra.Views.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoGato_U3_Jessica_Alondra.Views"
        mc:Ignorable="d"
        Title="Conexión de jugadores" Height="240" Width="500" Icon="/Resources\icontrol.ico">
    <StackPanel>
        <TextBlock FontFamily="COOLVETICA" FontSize="32" Margin="20,10" Foreground="#5e4d4d">
            Usuario:
            <TextBlock Text="{Binding NombreJugador1}" FontSize="32" Margin="20,0" Foreground="#5e4d4d" FontFamily="COOLVETICA"></TextBlock>
        </TextBlock>
        <TextBlock Text="{Binding Mensaje}" FontStyle="Italic" Margin="10,5,10,10" FontSize="20" TextWrapping="Wrap"></TextBlock>
        <Button IsEnabled="False" Content="Iniciar partida" Width="200" Height="60" Background="#5e4d4d" BorderBrush="Transparent"
                    FontFamily="COOLVETICA" FontSize="30" Foreground="#FFB8B8B8" ></Button>
    </StackPanel>
</Window>
