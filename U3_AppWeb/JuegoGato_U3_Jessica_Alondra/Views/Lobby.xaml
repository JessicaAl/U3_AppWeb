<Window x:Class="JuegoGato_U3_Jessica_Alondra.Views.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoGato_U3_Jessica_Alondra.Views"
        mc:Ignorable="d"
        Title="Juego del gato" Height="450" Width="800">
    <StackPanel>
        <TextBlock>
            Usuario:
            <TextBlock Text="{Binding NombreJugador1}"></TextBlock>
        </TextBlock>
        <TextBlock Text="{Binding Mensaje}" FontStyle="Italic"></TextBlock>
        <Button IsEnabled="False" Content="Iniciar partida"></Button>
    </StackPanel>
</Window>
